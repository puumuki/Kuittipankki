<div class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Käyttäjäntiedot</h4>
      </div>

      <div class="modal-body">
        <div class="form-horizontal "> 

          <div class="form-group">
            <label for="user-name" 
                   class="col-sm-3 control-label">
                   Käyttäjän nimi
            </label>
            <div class="col-sm-9">
              <input type="text" 
                     class="form-control" 
                     id="user-name" placeholder="Username" 
                     value="{{username}}" />
            </div>
          </div>

          <div class="form-group">
            <label for="created" 
                   class="col-sm-3 control-label">
                   Liittynyt
            </label>
            <div class="col-sm-9">
              <input type="text" 
                     class="form-control" 
                     id="user-name" placeholder="Liittynyt" 
                     value="{{created}}" />
            </div>
          </div>

        </div>
      </div>
      
      <div class="modal-footer">
        <button type="button" name="ok" class="btn btn-danger" data-dismiss="modal">Tallenna</button>
        <button type="button" 
                class="btn btn-default" 
                class="close" 
                data-dismiss="modal" 
                aria-label="Close">Peruuta</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->