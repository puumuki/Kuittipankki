
<div class="container center-block">
  <div class="hero-unit">

    <div class="row bottom-margin" data-id="{{id}}">

      <div class="col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
        
        <div class="panel panel-default">

          <div class="panel-heading">
            <div class="row top-margin "> 
              <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <label for="name">{{name}}</label>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right">
                <span>ostettu {{fromPurchase}} sitten</span>
              </div>
            </div>
          </div>

          <div class="panel-body">
          
            <div class="row top-margin "> 
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="name">Tuotteen nimi</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6">
                {{name}}
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="date">Hankintapäivä</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6">
                <span>{{datetime purchaseDate}}</span>
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6"><label for="varrantlyend">Takuupäättyy</label></div>
              <div class="col-md-9 col-sm-6 col-xs-6 text-left">
                {{{datetime warrantlyEndDate}}}
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="varrantlyend">Kauppa</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6">
                {{store}}
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="varrantlyend">Tuotteen hinta</label>
              </div>
              <div class="col-md-9 col-sm-9 col-xs-6">
                {{price}} {{#if price}}€{{/if}}
              </div>
            </div>             

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="varrantlyend">Rekisteröity</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6">
                {{datetime registered}}
              </div>
            </div>   

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="varrantlyend">Muuta</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6">
                <pre>{{description}}</pre>
              </div>
            </div>   

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3">
                <label for="varrantlyend">Avainsanat</label>
              </div>
              <div class="col-md-9 col-sm-6">
                {{#each tags}}
                  <span class="badge badge-info">{{this}}</span>
                {{/each}}
              </div>
            </div>   
            
            <div class="row text-center">
              <h3>Kuvat</h3>
            </div>

            <div class="row top-margin">
              {{#each pictures}}
                <div class="col-md-3 col-sm-3">
                  <a class="thumbnail" href="#picture/{{filename}}" data-image="{{filename}}">
                    <img src="pictures/{{thumbnail}}" class="img-rounded" alt="{{thumbnail}}">
                  </a>
                </div>
              {{else}}
                <div class="col-md-12 col-sma-12 text-center">Ei kuvia</div>    
              {{/each}}       
            </div>

            <div class="row top-margin ">
              <div class="col-md-12 text-right">

                {{#unless readonly}}             
                <a href="#receipt/edit/{{id}}">
                  <button type="button" name="edit" class="btn btn-default">Muokkaa</button>
                </a>
                {{/unless}}

                <a href="#">
                  <button type="button" name="cancel" class="btn btn-default">Takaisin</button>
                </a>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>


  </div>
</div>