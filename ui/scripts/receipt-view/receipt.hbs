
<div id="receipt-view-form" class="container center-block">
  <div class="hero-unit">

    <div class="row bottom-margin" data-id="{{id}}">

      <div class="col-md-8 col-md-offset-2 col-sm-12 col-xs-12">

        <div class="panel panel-default">

          <div class="panel-heading">
            <div class="row top-margin ">
              <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <label for="name">{{name}}</label>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right">
                <span>{{t "receipt.purchaced-since" fromPurchase=fromPurchase }}</span>
              </div>
            </div>
          </div>

          <div class="panel-body">

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="name">{{t "receipt.productname"}}</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6">
                <span id="name">{{name}}</span>
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="date">{{t "receipt.purchasedate"}}</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6">
                <span id="purchaseDate">{{datetime purchaseDate "DD.MM.YYYY"}}</span>
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6"><label for="varrantlyend">{{t "receipt.guaranteedate"}}</label></div>
              <div class="col-md-9 col-sm-6 col-xs-6 text-left">
                <span id="warrantlyEndDate">{{{datetime warrantlyEndDate "DD.MM.YYYY"}}}</span>
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="varrantlyend">{{t "receipt.store"}}</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6">
                <span id="store">{{store}}</span>
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="varrantlyend">{{t "receipt.price"}}</label>
              </div>
              <div class="col-md-9 col-sm-9 col-xs-6">
                <span id="price">{{price}}</span> {{#if price}}â‚¬{{/if}}
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="varrantlyend">{{t "receipt.registered"}}</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6">
                <span id="registered">{{datetime registered "DD.MM.YYYY"}}</span>
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3 col-xs-6">
                <label for="varrantlyend">{{t "receipt.description"}}</label>
              </div>
              <div class="col-md-9 col-sm-6 col-xs-6" id="description">
                {{{markdown description}}}
              </div>
            </div>

            <div class="row top-margin ">
              <div class="col-md-3 col-sm-3">
                <label for="varrantlyend">{{t "receipt.keywords"}}</label>
              </div>
              <div class="col-md-9 col-sm-6" id="tags">
                {{#each tags}}
                  <a href="#search/tag/{{tagId}}"><span class="badge badge-info">{{name}}</span></a>
                {{/each}}
              </div>
            </div>

            <div class="row text-center">
              <h3>{{t "receipt.images"}}</h3>
            </div>

            <div class="row top-margin" id="images">
              {{#each files}}
                <div class="col-md-3 col-sm-3 image">
                  <a class="thumbnail" href="#files/{{receiptId}}/{{fileId}}"
                     data-url="{{filename}}" data-mimetype="{{mimetype}}">
                    <img src="files/{{thumbnail}}" class="img-rounded" alt="{{thumbnail}}"
                     title="{{originalFilename}}" data-toggle="tooltip" data-toggle="tooltip">
                  </a>
                </div>
              {{else}}
                <div class="col-md-12 col-sma-12 text-center">{{t "receipt.noimages"}}</div>
              {{/each}}
            </div>

            <div class="row top-margin ">
              <div class="col-md-12 text-right">

                {{#unless readonly}}
                <a href="#receipt/edit/{{receiptId}}" id="edit">
                  <button type="button" name="edit" class="btn btn-default">{{t "btn.edit"}}</button>
                </a>
                {{/unless}}

                <a href="#">
                  <button type="button" name="cancel" class="btn btn-default">{{t "btn.back"}}</button>
                </a>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>


  </div>
</div>
